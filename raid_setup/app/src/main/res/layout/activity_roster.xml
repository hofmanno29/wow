                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <EditText
                        android:id="@+id/name_1"
                        android:hint="Member 1"
                        android:gravity="left"
                        android:inputType="text" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spinner_class_1" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spinner_role_1" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spinner_off_role_1" />
                    <EditText
                        android:id="@+id/gear_1"
                        android:hint="Gearscore"
                        android:gravity="left"
                        android:inputType="number"
                        android:maxLength="4" />
                </TableRow>

